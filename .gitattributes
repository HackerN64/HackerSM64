# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# List text files in case git doesn't characterize correctly
*.c text eol=lf
*.h text eol=lf
*.s text eol=lf
*.in text eol=lf
*.js text eol=lf
*.md text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.ld text eol=lf
*.inc text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yaml text eol=lf

# Same for binary
*.bin binary
*.m64 binary
*.png binary
*.aiff binary